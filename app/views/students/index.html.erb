<h1>Listing students</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Mobile</th>
    <th>Email</th>
    <th>Profile pic</th>
    <th>Graduation month</th>
    <th>Graduation year</th>
    <th>Major</th>
    <th>Linkedin url</th>
    <th>Github name</th>
    <th>Testimonial</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.mobile %></td>
    <td><%= student.email %></td>
    <td><%= student.profile_pic %></td>
    <td><%= student.graduation_month %></td>
    <td><%= student.graduation_year %></td>
    <td><%= student.major %></td>
    <td><%= student.linkedin_url %></td>
    <td><%= student.github_name %></td>
    <td><%= student.testimonial %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

